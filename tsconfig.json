{
   "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "allowJs": true
   },
   "lib": [
      "es2017"
   ],
   "include": [
      "./src/**/*"
   ],
   "exclude": [
      "./src/**/*.spec.ts"
   ]
}
